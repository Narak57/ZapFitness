@{
    ViewBag.Title = "About";
}


<div class="hero-section d-flex align-items-center justify-content-center text-white text-center"
     style="background-image: url('@Url.Content("~/Content/images/aboutPic.jpg")');
            background-size: cover;
            background-position: center;
            height: 600px;">
    <div class="container">
        <h1 class="display-4 fw-bold" style="font-family: 'Sugo Display', sans-serif;">About Zap Fitness</h1>
        <p class="lead" style="text-shadow: 3px 3px 6px rgba(0, 0, 0, 1), 2px 2px 4px rgba(0, 0, 0, 0.8);">Start your fitness journey with expert guidance and top-quality equipment.</p>
    </div>
</div>
