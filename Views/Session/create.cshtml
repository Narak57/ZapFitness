@model ZapFitness.Models.Session

@{
    ViewBag.Title = "Create";
}
<h2>Create New Session</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SessionName)
        @Html.TextBoxFor(m => m.SessionName, new { @class = "form-control", placeholder = "Enter session name" })
        @Html.ValidationMessageFor(m => m.SessionName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Schedule)
        @Html.TextBoxFor(m => m.Schedule, new { @class = "form-control", placeholder = "Enter schedule (e.g. Monday)" })
        @Html.ValidationMessageFor(m => m.Schedule, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Create" style="background-color: blue; color: white; border: none; padding: 10px 20px; cursor: pointer; font-size: 16px; border-radius: 8px;" />
}
