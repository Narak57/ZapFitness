@model IEnumerable<ZapFitness.Models.Member_Model>
@{
    ViewBag.Title = "Member List";
}

<h2>Member List</h2>

<p>
    @Html.ActionLink("Register New Member", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Member ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.MemberID</td>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Phone</td>
                <td>
                    <!-- Edit Button -->
                    @Html.ActionLink("Edit", "Edit", new { id = member.MemberID }, new { @class = "btn btn-sm btn-warning me-1" })
                    <!-- Delete Button -->
                    @using (Html.BeginForm("Delete", "Member", new { id = member.MemberID }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete?');" }))
                    {
                        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
